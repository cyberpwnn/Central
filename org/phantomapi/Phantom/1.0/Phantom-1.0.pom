<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.phantomapi</groupId>
  <artifactId>Phantom</artifactId>
  <name>Phantom</name>
  <version>1.0</version>
  <description>This again...</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.yml</include>
          <include>**/*.json</include>
          <include>**/*.txt</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.cyberpwn:*</include>
                  <include>org.ow2.asm:asm</include>
                  <include>org.ow2.asm:asm-commons</include>
                  <include>org.ow2.asm:asm-util</include>
                  <include>org.ow2.asm:asm-tree</include>
                  <include>org.ow2.asm:asm-analysis</include>
                  <include>org.ow2.asm:asm-xml</include>
                  <include>redis.clients:jedis</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.cyberpwn.gbench</pattern>
                  <shadedPattern>phantom.bench</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.cyberpwn.gconcurrent</pattern>
                  <shadedPattern>phantom.concurrent</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.cyberpwn.gformat</pattern>
                  <shadedPattern>phantom.format</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.cyberpwn.glang</pattern>
                  <shadedPattern>phantom.lang</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.cyberpwn.gmath</pattern>
                  <shadedPattern>phantom.math</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.cyberpwn.gnet</pattern>
                  <shadedPattern>phantom.net</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.cyberpwn.json</pattern>
                  <shadedPattern>phantom.json</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objectweb.asm</pattern>
                  <shadedPattern>phantom.asm</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>redis.clients</pattern>
                  <shadedPattern>phantom.redis</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>development</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>runbatchfile</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <executable>${script.development}</executable>
              <arguments>
                <argument>${phantom.target}\${phantom.finalname}.jar</argument>
                <argument>${development.server}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>runbatchfile</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>C:\Users\cyberpwn\Documents\development\workspace\Phantom\scripts\release.bat</executable>
                  <arguments>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\Phantom\target\Phantom-1.0.jar</argument>
                    <argument>C:\Users\cyberpwn\Documents\development\workspace\Phantom\release\Phantom-1.0.jar</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <executable>C:\Users\cyberpwn\Documents\development\workspace\Phantom\scripts\release.bat</executable>
              <arguments>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\Phantom\target\Phantom-1.0.jar</argument>
                <argument>C:\Users\cyberpwn\Documents\development\workspace\Phantom\release\Phantom-1.0.jar</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>spigot-repo</id>
      <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
    </repository>
    <repository>
      <id>central</id>
      <url>https://raw.githubusercontent.com/cyberpwnn/Central/master/</url>
    </repository>
    <repository>
      <id>mvn</id>
      <url>https://repo.maven.apache.org/maven2/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>1.12.2-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-lang</artifactId>
          <groupId>commons-lang</groupId>
        </exclusion>
        <exclusion>
          <artifactId>json-simple</artifactId>
          <groupId>com.googlecode.json-simple</groupId>
        </exclusion>
        <exclusion>
          <artifactId>guava</artifactId>
          <groupId>com.google.guava</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gson</artifactId>
          <groupId>com.google.code.gson</groupId>
        </exclusion>
        <exclusion>
          <artifactId>snakeyaml</artifactId>
          <groupId>org.yaml</groupId>
        </exclusion>
        <exclusion>
          <artifactId>bungeecord-chat</artifactId>
          <groupId>net.md-5</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>central</id>
      <url>${github.maven.repository}</url>
    </repository>
  </distributionManagement>
  <properties>
    <phantom.release>${project.basedir}\release</phantom.release>
    <development.server>C:\Users\cyberpwn\Documents\development\servers\dynamic\plugins\Phantom.jar</development.server>
    <github.maven.repository>file://C:\Users\cyberpwn\Documents\development\repository</github.maven.repository>
    <maven.compiler.target>1.8</maven.compiler.target>
    <script.development>${phantom.scripts}\development.bat</script.development>
    <phantom.target>${project.basedir}\target</phantom.target>
    <phantom.scripts>${project.basedir}\scripts</phantom.scripts>
    <phantom.main.bukkit>org.phantomapi.core.bukkit.PhantomBukkit</phantom.main.bukkit>
    <phantom.finalname>${project.name}-${project.version}</phantom.finalname>
    <script.release>${phantom.scripts}\release.bat</script.release>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>

